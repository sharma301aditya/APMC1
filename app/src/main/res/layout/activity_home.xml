<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!--welcome message in text view-->

    <!--Button for logout from the app-->
    <TextView
        android:id="@+id/idheadTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Congratulations ! \n Login Sucess Full"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="20sp" />

    <Button
        android:id="@+id/idBtnQRcreater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idBtnLogout"
        android:layout_marginTop="-446dp"
        android:layout_marginLeft="50dp"
        android:text="QR Creator"/>


    <Button
        android:id="@+id/idBtnQRscanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idBtnQRcreater"
        android:layout_marginTop="151dp"
        android:layout_marginLeft="50dp"
        android:text="QR Scanner"/>

    <Button
        android:id="@+id/idBtnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idheadTV"
        android:layout_marginTop="576dp"
        android:layout_marginLeft="300dp"
        android:text="Logout"
        android:textAllCaps="false" />





</RelativeLayout>

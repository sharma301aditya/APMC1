<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!--We are using this image view to display our QR code-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Generator "
        android:paddingRight="10dp"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/idIVQrcode"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
         />

    <!--Edit text to enter text for creating a QR code-->
    <EditText
        android:id="@+id/nametf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/idIVQrcode"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:hint="Name "
        android:inputType="text" />


    <!--Button for creating a QR code-->

    <EditText
        android:id="@+id/addrtf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/nametf"
        android:layout_alignStart="@+id/nametf"
        android:layout_alignEnd="@+id/nametf"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="0dp"
        android:autofillHints=""
        android:hint="Address"
        android:inputType="text" />

    <EditText
        android:id="@+id/producttf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/nametf"
        android:layout_alignStart="@+id/nametf"
        android:layout_alignEnd="@+id/nametf"
        android:layout_marginStart="0dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="0dp"
        android:autofillHints=""
        android:hint="Product "
        android:inputType="text" />

    <EditText
        android:id="@+id/quantitytf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/nametf"
        android:layout_alignStart="@+id/nametf"
        android:layout_alignEnd="@+id/nametf"
        android:layout_marginStart="0dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="0dp"
        android:autofillHints=""
        android:hint="Quantiny"
        android:inputType="text" />

    <Button
        android:id="@+id/idBtnGenerateQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nametf"
        android:layout_marginStart="20dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="20dp"
        android:text="Generate QR"
         />


</RelativeLayout>